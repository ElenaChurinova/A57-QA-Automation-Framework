<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Smoke" parallel="methods" thread-count="2">
    <parameter name="BaseUrl" value="https://qa.koel.app/"></parameter>
    <test name="Smoke Tests" preserve-order="false">
        <classes>
            <class name="LoginTests">
                <methods>
                    <include name=" testLoginSuccess"/>

                </methods>
            </class>

            <class name="ProfileTests">
                <methods>
                   <include name="changeProfileName"/>
                </methods>
            </class>

            <class name="AllSongsTests">
                <methods>
                    <include name="testPlaySong"/>
                    <include name="testAddSongToPlaylist"/>
                </methods>
            </class>

            <class name="PlaylistsTests">
                <methods>
                    <include name="testCreatePlaylist"/>
                    <include name="testDeletePlaylist"/>
                </methods>
            </class>




        </classes>
    </test>
</suite>